@model Article
<div class="text-center">
    <h1 class="display-4">Write an article</h1>
    <hr />
</div>
<div class="container>
    <div class=" row justify-content-center">
    <div class="card">
        <div class="card-header">
            New Article
        </div>
        <div class="card-body">
            <!-- GiriÅŸ Formu -->
            <form asp-controller="Article" asp-action="Create" method="post">
                <div class="form-group">
                    <label for="fileInput">Cover photo:</label>
                    <input type="file" name="fileInput" id="fileInput" accept="image/*">
                </div>
                <div class="form-group">
                    <label asp-for="ArticleTitle">Article Title:</label>
                    <input asp-for="ArticleTitle" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="ArticleContent">Article Content:</label>
                    <textarea asp-for="ArticleContent" class="form-control" rows="12" required></textarea>
                </div>
                <button type="submit" class="btn btn-success mt-2 float-end">Publish</button>
            </form>
        </div>
    </div>
</div>
</div>