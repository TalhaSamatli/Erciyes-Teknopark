@model List<Category>
@{
    ViewData["Title"] = "BBC World English";
}
<div class="text-center">
    <h1 class="display-4">Welcome to 6 Minute English</h1>    
    <hr />
    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var category in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <a href="/Article/Category/@category.CategoryID">                                                    
                        
                        <div class="card-body">
                            <h5 class="card-title">@category.CategoryName</h5>                            
                        </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
