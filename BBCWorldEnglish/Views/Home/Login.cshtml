@using BlogApp.Models
@model LoginViewModel

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <hr />
</div>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    User interface
                </div>
                <div class="card-body">
                    <!-- Giriş Formu -->
                    <form action="Login" method="post" id="LoginForm">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label >Username:</label>
                            <input asp-for="UserName" class="form-control" required>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserPassword">Password:</label>
                            <input asp-for="UserPassword" class="form-control" type="password" required>
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-warning mt-2">Login</button>
                    </form>
                    <!-- Üye Ol Linki -->
                    <p class="mt-3">If you don't have an account <a href="register">you can register.</a></p>
                </div>
            </div>
        </div>
    </div>
</div>